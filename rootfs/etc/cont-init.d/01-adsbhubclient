#!/usr/bin/with-contenv sh
# shellcheck shell=sh

# Check to make sure the correct command line arguments have been set
EXITCODE=0
if [ -z "${BEASTPORT}" ]; then
  echo "BEASTPORT environment variable not set. Using default"
fi
if [ -z "${BEASTHOST}" ]; then
  echo "ERROR: BEASTHOST environment variable not set"
  EXITCODE=1
fi
if [ -z "${CLIENTKEY}" ]; then
  echo "ERROR: CLIENTKEY environment variable not set"
  echo 'Please follow the "Obtaining a client key" steps in README.md'
  EXITCODE=1
fi
if [ $EXITCODE -ne 0 ]; then
  exit 1
fi

# Set up timezone
if [ -z "${TZ}" ]; then
  echo "WARNING: TZ environment variable not set"
else
  ln -snf "/usr/share/zoneinfo/$TZ" /etc/localtime && echo "$TZ" >/etc/timezone
fi
